{{template "base" .}}

{{define "content"}}


<!--Main content-->
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1>Search for availability</h1>

            <!--form-->
            <form action="" method="GET" novalidate class="needs-validation">
                <div class="form-row" id="reservation-dates">
                    <div class="col">
                        <label>
                            <input class="form-control" type="text" name="start" placeholder="Arrival" required>
                        </label>
                    </div>
                    <div class="col">
                        <label>
                            <input class="form-control" type="text" name="end" placeholder="Departure" required>
                        </label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Search availability</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p id="myParagraph"> This is some text</p>
            <p class="paraClass secondClass"> This is some text</p>
            <p class="paraClass"> This is some text</p>
            <p class=""> This is some text</p>
            <p>
                <button id="colorButton" class="btn btn-outline-secondary">Click me</button>
            </p>
        </div>
    </div>


</div>


{{end}}

{{define "js"}}
<script>
    const elem = document.getElementById('reservation-dates');
    const rangePicker = new DateRangePicker(elem, {
        format: "dd-mm-yyyy",
    });
</script>
{{end}}